<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo branco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Borda azul na esquerda -->
    <item android:gravity="start">
        <shape android:shape="rectangle">
            <size android:width="4dp" />
            <solid android:color="#4A90E2" />
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp" />
        </shape>
    </item>
    
    <!-- Borda amarela na direita (para seta) -->
    <item android:gravity="end">
        <shape android:shape="rectangle">
            <size android:width="40dp" />
            <solid android:color="#FFC107" />
            <corners android:topRightRadius="8dp" android:bottomRightRadius="8dp" />
        </shape>
    </item>
</layer-list> 