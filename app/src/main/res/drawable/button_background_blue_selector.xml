<!-- res/drawable/button_background_blue_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1a2f4d" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#1a2f4d" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#1a2f4d" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#1a2f4d" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#264064" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#264064" />
        </shape>
    </item>
</selector> 