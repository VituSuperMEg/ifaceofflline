<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo branco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Borda azul na esquerda -->
    <item android:gravity="start">
        <shape android:shape="rectangle">
            <size android:width="25dp" />
            <solid android:color="#2196F3" />
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="20dp" />
        </shape>
    </item>
    
    <!-- Borda amarela na direita -->
    <item android:gravity="end">
        <shape android:shape="rectangle">
            <size android:width="40dp" />
            <solid android:color="#FFC107" />
            <corners android:topRightRadius="20dp" android:bottomRightRadius="20dp" />
        </shape>
    </item>
</layer-list> 