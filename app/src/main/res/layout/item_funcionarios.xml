<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/card_funcionarios_with_arrow"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="4dp"
    android:minHeight="80dp">

    <!-- Conteúdo principal -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical">

        <!-- Nome do funcionário -->
        <TextView
            android:id="@+id/tvNomeFuncionario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nome do Funcionário"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Duas colunas de informações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Coluna esquerda - Informações do funcionário -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/matricula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Matrícula: 123"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/cpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="CPF: 123.456.789-00"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/cargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo: Desenvolvedor"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- Coluna direita - Dados gerais -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orgao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Órgão: Secretaria de Educação"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/setor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Setor: TI"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/localizacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localização: 001"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/jaImportado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Já Importado: Não"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Área da seta -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Seta"
            android:src="@drawable/ic_arrow_right_black" />
    </LinearLayout>

</LinearLayout>
