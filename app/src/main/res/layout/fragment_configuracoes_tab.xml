<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Card de Configurações Gerais -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações Gerais"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59"
                    android:layout_marginBottom="16dp" />

                <!-- Localização ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="ID da Localização"
                    app:boxStrokeColor="#4A90E2"
                    app:hintTextColor="#4A90E2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextLocalizacaoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Código de Sincronização -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Código de Sincronização"
                    app:boxStrokeColor="#4A90E2"
                    app:hintTextColor="#4A90E2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextCodigoSincronizacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Configuração de Entidade -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏢 Configuração de Entidade"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configure a entidade (empresa/órgão) para usar o sistema"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Status da entidade atual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:background="#F8F9FA"
                    android:padding="12dp"
                    android:backgroundTint="#F8F9FA">

                    <ImageView
                        android:id="@+id/iconEntidadeStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_warning"
                        android:tint="#FF9800" />

                    <TextView
                        android:id="@+id/textEntidadeStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Entidade não configurada"
                        android:textSize="16sp"
                        android:textColor="#2E3A59" />

                </LinearLayout>

                <!-- Botão para configurar entidade -->
                <Button
                    android:id="@+id/btnConfigurarEntidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="⚙️ Configurar Entidade"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_background_blue_selector"
                    android:elevation="2dp"
                    android:padding="16dp" />

                <!-- Botão para alterar entidade -->
                <Button
                    android:id="@+id/btnAlterarEntidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔄 Alterar Entidade"
                    android:textColor="#4A90E2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_background_white_blue_selector"
                    android:elevation="2dp"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Sincronização Automática -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronização Automática"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59"
                    android:layout_marginBottom="16dp" />

                <!-- Switch para ativar/desativar sincronização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ativar sincronização automática"
                        android:textSize="16sp"
                        android:textColor="#2E3A59" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSincronizacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbColor="#4A90E2"
                        app:trackColor="#E0E0E0" />

                </LinearLayout>

                <!-- Layout do intervalo de sincronização -->
                <LinearLayout
                    android:id="@+id/layoutIntervaloSincronizacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intervalo de Sincronização (em horas)"
                        android:textSize="16sp"
                        android:textColor="#2E3A59"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Intervalo em horas"
                        app:boxStrokeColor="#4A90E2"
                        app:hintTextColor="#4A90E2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextIntervalo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text="24" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Botão de sincronização manual -->
                <Button
                    android:id="@+id/btnSincronizarAgora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background_blue_selector"
                    android:text="Sincronizar Agora"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Informações -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F4FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Informações"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• ID da Localização: Identificador único da localização"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Código de Sincronização: Código para sincronizar dados"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Sincronização automática: Envia dados periodicamente"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Gerenciamento de Batidas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔄 Gerenciar Batidas Duplicadas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolva problemas com batidas que ficam como pendentes mesmo já tendo sido enviadas."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Botão para verificar duplicatas -->
                <Button
                    android:id="@+id/btnVerificarDuplicatas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="🔍 Verificar e Marcar Duplicatas"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_background_blue_selector"
                    android:elevation="2dp"
                    android:padding="16dp" />

                <!-- Botão para forçar marcação (use com cuidado) -->
                <Button
                    android:id="@+id/btnForcarMarcacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="⚠️ Forçar Marcação de TODAS as Batidas"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_background_red_selector"
                    android:elevation="2dp"
                    android:padding="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Atenção: O botão vermelho marca TODAS as batidas pendentes como sincronizadas. Use apenas se tiver certeza que elas já foram enviadas."
                    android:textSize="12sp"
                    android:textColor="#E53E3E"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 