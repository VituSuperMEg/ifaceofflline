<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Card principal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPrincipal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo/Ícone do App -->
                <ImageView
                    android:id="@+id/ivAppIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/roundend"
                    android:padding="16dp"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="Ícone do aplicativo" />

                <!-- Nome do App -->
                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:text="iFace Offline"
                    android:textColor="#264064"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Versão atual -->
                <TextView
                    android:id="@+id/tvCurrentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Versão 1.0"
                    android:textColor="#8B94A8"
                    android:textSize="16sp" />

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="#E0E0E0" />

                <!-- Informações adicionais -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:text="Sistema de Reconhecimento Facial"
                    android:textColor="#264064"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Controle de Ponto Offline"
                    android:textColor="#8B94A8"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de informações da versão -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVersionInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardPrincipal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Informações da Versão"
                    android:textColor="#264064"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Versão atual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Versão Atual:"
                        android:textColor="#8B94A8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvVersionCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0 (1)"
                        android:textColor="#264064"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Data de compilação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data de Compilação:"
                        android:textColor="#8B94A8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvBuildDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2024"
                        android:textColor="#264064"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Status da atualização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status:"
                        android:textColor="#8B94A8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvUpdateStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atualizado"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de atualização -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardVersionInfo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Atualizações"
                    android:textColor="#264064"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Botão de verificar atualização -->
                <Button
                    android:id="@+id/btnCheckUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_background_blue_selector"
                    android:text="Verificar Atualizações"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <!-- Botão de atualizar (inicialmente invisível) -->
                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_background_green_selector"
                    android:text="Atualizar Agora"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:visibility="gone" />

                <!-- Progress bar para download -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Texto de status da atualização -->
                <TextView
                    android:id="@+id/tvUpdateMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Clique em 'Verificar Atualizações' para verificar se há uma nova versão disponível."
                    android:textColor="#8B94A8"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView> 