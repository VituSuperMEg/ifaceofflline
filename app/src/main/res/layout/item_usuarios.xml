<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/card_usuarios_with_arrow"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="4dp"
    android:minHeight="80dp">

    <!-- Conteúdo principal -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="0dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tuNomeUsuario"
            android:layout_width="1184dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Nome do Funcionário"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codigoUsuario"
            android:layout_width="1189dp"
            android:layout_height="wrap_content"
            android:text="CPF: 999.****.999-**"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/cargoUsuario"
            android:layout_width="1189dp"
            android:layout_height="wrap_content"
            android:text="Cargo: Não informado"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/secretariaUsuario"
            android:layout_width="1189dp"
            android:layout_height="wrap_content"
            android:text="Secretaria: Não informado"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Área da seta (dentro da borda amarela) -->

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Seta"
            android:paddingLeft="20dp"
            android:src="@drawable/ic_arrow_right_black" />
    </LinearLayout>

</LinearLayout>
