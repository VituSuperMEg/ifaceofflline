<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header do item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time_clock"
                android:tint="#4A90E2"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNomeFuncionario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Funcionário"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59" />

                <TextView
                    android:id="@+id/textMatricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matrícula: 12345"
                    android:textSize="12sp"
                    android:textColor="#8B94A8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/textHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textSize="14sp"
                    android:textColor="#4A90E2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStatusSincronizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronizado"
                    android:textSize="10sp"
                    android:textColor="#4CAF50"
                    android:background="@drawable/roundend"
                    android:backgroundTint="#E8F5E8"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Informações detalhadas do funcionário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCpf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CPF: 123.456.789-00"
                    android:textSize="12sp"
                    android:textColor="#8B94A8"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textCargo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargo: Analista"
                    android:textSize="12sp"
                    android:textColor="#8B94A8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/textSecretaria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Secretaria: SEAD"
                    android:textSize="12sp"
                    android:textColor="#8B94A8"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textLotacao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lotação: Diretoria"
                    android:textSize="12sp"
                    android:textColor="#8B94A8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Informações do ponto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDataCompleta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data: 15/12/2024 14:30:25"
                android:textSize="12sp"
                android:textColor="#8B94A8"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Entrada"
                android:textSize="12sp"
                android:textColor="#8B94A8"
                android:background="@drawable/roundend"
                android:backgroundTint="#E3F2FD"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 