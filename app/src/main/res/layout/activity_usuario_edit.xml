<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioEdit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/roundend"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/arrowLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrowleft" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Editar Usuário"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/arrowLeft"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ScrollView para permitir rolagem -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campo Código -->
                <TextView
                    android:id="@+id/labelCodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Código"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <EditText
                    android:id="@+id/editTextCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_field_background"
                    android:hint="Digite o código"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <!-- Campo Nome -->
                <TextView
                    android:id="@+id/labelNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nome"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <EditText
                    android:id="@+id/editTextNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_field_background"
                    android:hint="Digite o nome"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <!-- Campo Ativo -->
                <TextView
                    android:id="@+id/labelAtivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <RadioGroup
                    android:id="@+id/radioGroupAtivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonAtivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:checked="true"
                        android:text="Ativo"
                        android:textSize="16sp"
                        android:textColor="#424242" />

                    <RadioButton
                        android:id="@+id/radioButtonInativo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inativo"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </RadioGroup>

                <!-- Seção Facial -->
                <TextView
                    android:id="@+id/labelFacial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Foto Facial:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <ImageView
                    android:id="@+id/imageViewFacial"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle_image_background"
                    android:contentDescription="Foto Facial do Usuário"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/textViewStatusFacial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Nenhuma foto facial cadastrada"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <!-- Botões -->
                <Button
                    android:id="@+id/btnCadastrarFacial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_background_white_blue_selector"
                    android:text="Cadastrar/Atualizar Facial"
                    android:textColor="#264064"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background_blue_selector"
                    android:text="Salvar Alterações"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_background_white_blue_selector"
                    android:text="Cancelar"
                    android:textColor="#264064"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnExcluir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_background_pink_selector"
                    android:text="Excluir Funcionário"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:padding="12dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
