<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Background com gradiente sutil -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <!-- Card principal centralizado -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:elevation="8dp"
        android:radius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Ícone de sucesso -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/success_circle_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_check_white"
                    android:contentDescription="Sucesso"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <!-- Mensagem de sucesso -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponto Registrado com sucesso!"
                android:textSize="20sp"
                android:textColor="@color/text_dark_gray"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Saudação e nome do funcionário -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olá, "
                    android:textSize="16sp"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tvFuncionarioNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FUNCIONÁRIO"
                    android:textSize="16sp"
                    android:textColor="@color/primary_blue_dark"
                    android:textStyle="bold"
                    android:textAllCaps="true" />

            </LinearLayout>

            <!-- Detalhes do ponto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Data do ponto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data do Ponto"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDataPonto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/08/2025"
                        android:textSize="16sp"
                        android:textColor="@color/primary_blue_dark"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Hora do ponto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora do Ponto"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvHoraPonto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:59:43"
                        android:textSize="16sp"
                        android:textColor="@color/primary_blue_dark"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Coordenadas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude - Longitude"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCoordenadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-6.377917793252374 | -39.316891286420876"
                        android:textSize="14sp"
                        android:textColor="@color/primary_blue_dark"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Botão Fechar -->
            <Button
                android:id="@+id/btnFechar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Fechar"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_background"
                android:elevation="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout> 